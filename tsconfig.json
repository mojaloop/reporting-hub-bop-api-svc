{
  "include": [
    "src/**/*",
    "test/**/*",
    ".eslintrc.js",
    "ambient.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"]
    },
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2020",
    "noEmit": false,
    "outDir": "dist",
    "lib": ["es2020"],
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
